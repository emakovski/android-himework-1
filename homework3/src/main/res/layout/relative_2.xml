<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:background="#a9a9a9"
        android:gravity="center"
        android:text="PHOTO"
        android:textColor="@color/black"
        android:textSize="80sp"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_baseline_photo_camera_24"
        android:layout_alignEnd="@id/photo"
        android:layout_alignBottom="@id/photo"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="bottom"
        android:text="   Title"
        android:textSize="20sp"
        android:layout_below="@id/photo"/>

    <TextView
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="top"
        android:text="    _______________________________________________________"
        android:textSize="15sp"
        android:layout_below="@id/title"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="bottom"
        android:text="   Price"
        android:textSize="20sp"
        android:layout_below="@id/a"/>

    <TextView
        android:id="@+id/loc"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:gravity="bottom"
        android:text="Location"
        android:textSize="20sp"
        android:layout_alignEnd="@id/price"
        android:layout_alignBottom="@id/price"/>

    <ImageView
        android:id="@+id/pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@drawable/ic_baseline_location_on_24"
        android:layout_alignEnd="@id/loc"
        android:layout_alignBottom="@id/loc"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/b"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="top"
        android:text="    ______________      ______________________________________"
        android:textSize="15sp"
        android:layout_below="@id/price"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="bottom"
        android:text="   Description"
        android:textSize="20sp"
        android:layout_below="@id/b"/>

    <TextView
        android:id="@+id/c"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="top"
        android:text="    _______________________________________________________"
        android:textSize="15sp"
        android:layout_below="@id/desc"/>

    <TextView
        android:id="@+id/inv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="bottom"
        android:text="   Inventory"
        android:textSize="20sp"
        android:layout_below="@id/c"/>

    <TextView
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:gravity="bottom"
        android:text="Weight"
        android:textSize="20sp"
        android:layout_alignEnd="@id/inv"
        android:layout_alignBottom="@id/inv"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="top"
        android:text="    ______________                                                 ______________"
        android:textSize="15sp"
        android:layout_below="@id/inv"/>

</RelativeLayout>